                                        div(class="file-item bg-cover")
                                            span(class="file__delete js-file-delete")
                                                svg
                                                    use(xlink:href="img/sprites/sprite.svg#delete")
                                            img(src="img/file-2.jpg" alt="")
                        div(class="reviews-form__button")
                            button(class="btn btn--blue btn--size btn--w100")
                                span Отправить
